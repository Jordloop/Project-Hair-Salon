@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All Stylist</h1><br>

<ul>
  @if (Model.Count == 0)
  {
    <p>You have no Stylist. Click "Add New Stylist" button above to add a new stylist.</p>
  }
  @foreach (var Stylist in Model)
  {
    <li>@Stylist.GetName()</li>
  }

  <br>
  <form action="stylist/deleteAll" method="post">
    <button type="submit" class="btn btn-danger" name="stylist-delete-all">Delete All Stylists</button>
  </form>

</ul>
