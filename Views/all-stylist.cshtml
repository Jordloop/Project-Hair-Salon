@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All Stylist</h1><br>

<ul>
  @if (Model.Count != 0)
  {

    @foreach (var stylist in Model)
    {
      <li><a href="/stylist/view/@stylist.GetId()"> @stylist.GetName()</a></li>
    }


    <br>
    <form action="/stylist/delete-all" method="post">
      <button type="submit" class="btn btn-danger">Delete All Stylists</button>
    </form>
  </ul>
  }
else
{
  <p>You have no Stylist.</p>
}
<br>
<form action="/stylist/add" method="post">
  <label for="stylist-name">Stylist Name</label>
  <input name="stylist-name" type="text">
  <br><br><button type="submit">Add New Stylist</button>
</form>
