@{
Layout = "Shared/_Layout.cshtml";
}

@if (Model.Count != 0)
{
<form action="/client/add" method="post">
  <label for="client-name">Client Name</label>
  <input name="client-name" type="text">
  <select name = "stylist-id">
  @foreach (var stylist in Model)
  {
    <option value="@stylist.GetId()">@stylist.GetName()</option>
  }
  </select>

  <br><br><button type="submit">Add New Client</button>
</form>
}
else
{
<p>You must add a stylist before you add a client.</p>
}
